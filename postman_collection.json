		{
			"name": "Orders",
			"item": [
				{
					"name": "List Orders",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{authToken}}", "type": "string"}]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenantId}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/orders?per_page=15",
							"host": ["{{baseUrl}}"],
							"path": ["orders"],
							"query": [
								{"key": "per_page", "value": "15"},
								{"key": "status", "value": "paid", "disabled": true},
								{"key": "date", "value": "2026-01-08", "disabled": true}
							]
						},
						"description": "List all orders with filtering options"
					}
				},
				{
					"name": "Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.id) {",
									"        pm.collectionVariables.set('lastOrderId', jsonData.data.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{authToken}}", "type": "string"}]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenantId}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customer_id\": 1,\n  \"items\": [\n    {\n      \"product_id\": 1,\n      \"quantity\": 1\n    },\n    {\n      \"product_id\": 2,\n      \"quantity\": 2\n    }\n  ],\n  \"tax_rate\": 10,\n  \"notes\": \"Test order from Postman\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders",
							"host": ["{{baseUrl}}"],
							"path": ["orders"]
						},
						"description": "Create a new order (deducts stock automatically)"
					}
				},
				{
					"name": "Get Order Details",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{authToken}}", "type": "string"}]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenantId}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/orders/1",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "1"]
						},
						"description": "Get order details with items and customer"
					}
				},
				{
					"name": "Mark Order as Paid (Owner Only)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{authToken}}", "type": "string"}]
						},
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenantId}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"paid\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/orders/2/status",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "2", "status"]
						},
						"description": "Update order status to paid"
					}
				},
				{
					"name": "Cancel Order (Owner Only)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{authToken}}", "type": "string"}]
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "X-Tenant-ID",
								"value": "{{tenantId}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/orders/2/cancel",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "2", "cancel"]
						},
						"description": "Cancel order and restore stock (Owner only)"
					}
				}
			],
			"description": "Order management endpoints. Both Owner and Staff can create orders. Only Owner can update status and cancel."
